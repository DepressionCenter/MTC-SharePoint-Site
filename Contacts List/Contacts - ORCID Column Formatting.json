{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "children": [
        {
            "elmType": "span",
            "style": {
                "padding-right": "10px"
            },
            "txtContent": "@currentField"
        },
        {
            "attributes": {
                "class": "sp-field-quickActions",
                "href": "='https://orcid.org/' + @currentField",
                "iconName": "Website",
                "target": "_blank"
            },
            "elmType": "a",
            "style": {
                "text-decoration": "none"
            }
        }
    ],
    "elmType": "div"
}